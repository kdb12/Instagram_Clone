<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"

    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/instagram"
        android:id="@+id/comment_recycle_profile"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/comment_recycle_profile"
        android:layout_toRightOf="@id/comment_recycle_profile"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kdb101"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/comment_recycle_username"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEY !! NICE PHOTO "
            android:textColor="@android:color/holo_blue_dark"
            android:maxLines="5"
            android:id="@+id/comment_recycle_user_comment"
            />

    </LinearLayout>

</RelativeLayout>